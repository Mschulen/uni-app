<h2 class="center-align">This is the index page for Students</h2>

<% @students.each do |student| %>

<div class="row">
  <div class="col s6">
    <div class="card darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= student.name %></span>
        <p><%= student.email %></p>
      </div>
      <div class="card-action">
        <%= link_to 'View', student_path(student.id) %>
        <%= link_to 'Annihilate >:)', student_path(student.id), method: :delete, data: { confirm: "Are you sure you wish to ABSOLUTELY DEMOLISH this user's ass?"} %>
        <%= link_to 'Edit', edit_student_path(student.id) %>
      </div>
    </div>
  </div>
</div>
<% end %>