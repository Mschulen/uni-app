<h2 class="center-align">This is the index page for Courses :)</h2>

<% @courses.each do |course| %>

<div class="row">
  <div class="col s6">
    <div class="card darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= course.short_name %></span>
        <h5 id="course-name"><%= course.name %></h3>
        <p><%= course.description %></p>
      </div>
      <div class="card-action">
        <a href="#">View</a>
        <a href="#">Enroll</a>
      </div>
    </div>
  </div>
</div>
<% end %>